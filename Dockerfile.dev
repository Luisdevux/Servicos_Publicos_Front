# Dockerfile para desenvolvimento
FROM node:22-slim

# Instalar dependências necessárias para compilar módulos nativos
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    python3 \
    make \
    g++ \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Expor porta do Next.js
EXPOSE 3000
