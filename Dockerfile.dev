# Dockerfile para desenvolvimento
FROM node:22-slim

# Definir diretório de trabalho
WORKDIR /app

# Copiar package files
COPY package*.json ./

# Instalar dependências com permissões corretas
RUN npm install --include=optional --legacy-peer-deps

# Copiar código fonte
COPY . .

# Expor porta do Next.js
EXPOSE 3000
